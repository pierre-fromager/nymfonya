{
    "name": "pier-infor/skypass",
    "description": "Nymfonya Backend.",
    "keywords": [
        "backend",
        "rest"
    ],
    "license": "GNU3",
    "type": "project",
    "require": {
        "php": ">=7.0.0",
        "firebase/php-jwt": "^3.0 || ^4.0 || ^5.0",
        "monolog/monolog": "^1.25",
        "respect/validation": "^1.1",
        "zircote/swagger-php": "^3.0",
        "nilportugues/sql-query-builder": "^1.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5",
        "squizlabs/php_codesniffer": "*",
        "friendsofphp/php-cs-fixer": "^2.13",
        "phploc/phploc": "^4.0",
        "phpmd/phpmd": "@stable"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/App/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "disable-tls": false,
        "secure-http": true,
        "process-timeout": 0
    },
    "scripts": {
        "checklint": [
            "phpcs -e --standard=PSR2 --warning-severity=10 --extensions=php src/* tests/*"
        ],
        "lint": [
            "phpcbf --standard=PSR2 --warning-severity=10 --extensions=php src/* tests/*"
        ],
        "cq": [
            "phploc -vvv --ansi src/*"
        ],
        "md": [
            "phpmd ./src text codesize,unusedcode,naming"
        ],
        "start": [
            "php -S localhost:8888 src/index.php"
        ],
        "cov": [
            "phpunit --coverage-html='./coverage'"
        ],
        "covdbg": [
            "phpdbg -qrr ./vendor/bin/phpunit --coverage-html='./coverage'"
        ],
        "test": [
            "phpunit --verbose --testsuite all"
        ],
        "testCookie": [
            "phpunit --testsuite Cookie"
        ],
        "testRequest": [
            "phpunit --debug --testsuite Request"
        ],
        "testResponse": [
            "phpunit --testsuite Response"
        ],
        "testHeaders": [
            "phpunit --testsuite Headers"
        ],
        "testRoutes": [
            "phpunit --testsuite Routes"
        ],
        "testRouter": [
            "phpunit --testsuite Router"
        ],
        "testMiddleware": [
            "phpunit --testsuite Middleware"
        ],
        "testSession": [
            "phpunit --testsuite Session"
        ],
        "testConfig": [
            "phpunit --testsuite Config"
        ],
        "testContainer": [
            "phpunit --testsuite Container"
        ],
        "testKernel": [
            "phpunit --testsuite Kernel"
        ],
        "testCtrlApiV1Auth": [
            "phpunit --testsuite ControllerApiV1Auth"
        ],
        "testCtrlApiV1Stat": [
            "phpunit --testsuite ControllerApiV1Stat"
        ],
        "testCtrlApiV1Restful": [
            "phpunit --testsuite ControllerApiV1Restful"
        ],
        "testCtrlApiV1Test": [
            "phpunit --testsuite ControllerApiV1Test"
        ],
        "testAbstractApiController": [
            "phpunit --testsuite AbstractControllerApi"
        ],
        "testCtrlConfig": [
            "phpunit --testsuite ControllerConfig"
        ],
        "testComponentCacheRedisAdapter": [
            "phpunit --testsuite ComponentCacheRedisAdapter"
        ],
        "testComponentJwtToken": [
            "phpunit --testsuite ComponentJwtToken"
        ],
        "testComponentCrypt": [
            "phpunit --testsuite ComponentCrypt"
        ],
        "testComponentAuth": [
            "phpunit --testsuite ComponentAuth"
        ],
        "testComponentFileUploader": [
            "phpunit --testsuite ComponentFileUploader"
        ],
        "testComponentModelOrm": [
            "phpunit --testsuite ComponentModelOrm"
        ],
        "testMiddlewareJwt": [
            "phpunit --debug  --testsuite MiddlewareJwt"
        ],
        "testMiddlewareCors": [
            "phpunit --testsuite MiddlewareCors"
        ],
        "testMiddlewareAfter": [
            "phpunit --testsuite MiddlewareAfter"
        ],
        "testMiddlewareRestful": [
            "phpunit --testsuite MiddlewareRestful"
        ],
        "testModelSearchAbstract": [
            "phpunit --testsuite ModelSearchAbstract"
        ],
        "testModelAccounts": [
            "phpunit --testsuite ModelAccounts"
        ],
        "testModelUsers": [
            "phpunit --testsuite ModelUsers"
        ]
    }
}
