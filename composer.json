{
    "name": "PierInfor/skypass",
    "description": "Nymfonya Backend.",
    "keywords": [
        "backend",
        "rest"
    ],
    "license": "GNU3",
    "type": "project",
    "require": {
        "php": ">=7.0.0",
        "firebase/php-jwt": "^3.0 || ^4.0 || ^5.0",
        "monolog/monolog": "^1.25"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5",
        "phpspec/prophecy": "~1.0",
        "squizlabs/php_codesniffer": "*",
        "friendsofphp/php-cs-fixer": "^2.13",
        "phploc/phploc": "^4.0",
        "phpmd/phpmd": "@stable"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/App/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "disable-tls": false,
        "secure-http": true
    },
    "scripts": {
        "checklint": [
            "phpcs --standard=PSR2 --warning-severity=0 --extensions=php src/*"
        ],
        "lint": [
            "phpcbf --standard=PSR2 --warning-severity=10 --extensions=php src/* tests/*"
        ],
        "cq": [
            "phploc -vvv --ansi src/*"
        ],
        "md": [
            "phpmd ./src text codesize,unusedcode,naming"
        ],
        "start": [
            "php -S localhost:8888 src/index.php"
        ],
        "cov": [
            "phpunit --coverage-html='./coverage' --bootstrap tests/bootstrap.php tests"
        ],
        "covdbg": [
            "phpdbg -qrr ./vendor/bin/phpunit --coverage-html='./coverage' --bootstrap tests/bootstrap.php tests"
        ],
        "test": [
            "phpunit --bootstrap tests/bootstrap.php tests"
        ],
        "testCookie": [
            "phpunit --bootstrap tests/bootstrap.php --testsuite Cookie"
        ],
        "testRequest": [
            "phpunit --debug --bootstrap tests/bootstrap.php --testsuite Request"
        ],
        "testResponse": [
            "phpunit --bootstrap tests/bootstrap.php --testsuite Response"
        ],
        "testHeaders": [
            "phpunit --bootstrap tests/bootstrap.php --testsuite Headers"
        ],
        "testRoutes": [
            "phpunit --bootstrap tests/bootstrap.php --testsuite Routes"
        ],
        "testRouter": [
            "phpunit --bootstrap tests/bootstrap.php --testsuite Router"
        ],
        "testMiddleware": [
            "phpunit --bootstrap tests/bootstrap.php --testsuite Middleware"
        ],
        "testSession": [
            "phpunit --bootstrap tests/bootstrap.php --testsuite Session"
        ],
        "testConfig": [
            "phpunit --bootstrap tests/bootstrap.php --testsuite Config"
        ],
        "testContainer": [
            "phpunit --bootstrap tests/bootstrap.php --testsuite Container"
        ],
        "testKernel": [
            "phpunit --bootstrap tests/bootstrap.php --testsuite Kernel"
        ],
        "testCtrlApiV1Auth": [
            "phpunit --bootstrap tests/bootstrap.php --testsuite ControllerApiV1Auth"
        ],
        "testCtrlApiV1Stat": [
            "phpunit --bootstrap tests/bootstrap.php --testsuite ControllerApiV1Stat"
        ],
        "testAbstractApiController": [
            "phpunit --bootstrap tests/bootstrap.php --testsuite AbstractControllerApi"
        ],
        "testCtrlConfig": [
            "phpunit --bootstrap tests/bootstrap.php --testsuite ControllerConfig"
        ],
        "testToolsJwtToken": [
            "phpunit --bootstrap tests/bootstrap.php --testsuite ToolsJwtToken"
        ],
        "testToolsCrypt": [
            "phpunit --bootstrap tests/bootstrap.php --testsuite ToolsCrypt"
        ],
        "testMiddlewareJwt": [
            "phpunit --bootstrap tests/bootstrap.php --testsuite MiddlewareJwt"
        ],
        "testMiddlewareCors": [
            "phpunit --bootstrap tests/bootstrap.php --testsuite MiddlewareCors"
        ],
        "testModelSearchAbstract": [
            "phpunit --bootstrap tests/bootstrap.php --testsuite ModelSearchAbstract"
        ]
    }
}