{
    "name": "PierInfor/skypass",
    "description": "Nymfonya Backend.",
    "keywords": [
        "backend",
        "rest"
    ],
    "license": "GNU3",
    "type": "project",
    "require": {
        "php": ">=7.0.0",
        "firebase/php-jwt": "^3.0 || ^4.0 || ^5.0",
        "monolog/monolog": "^1.25"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5",
        "squizlabs/php_codesniffer": "*",
        "friendsofphp/php-cs-fixer": "^2.13",
        "phploc/phploc": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/App/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "disable-tls": false,
        "secure-http": true
    },
    "scripts": {
        "checklint": [
            "phpcs --standard=PSR2 --warning-severity=0 --extensions=php src/*"
        ],
        "lint": [
            "phpcbf --standard=PSR2 --warning-severity=0 --extensions=php src/*"
        ],
        "cq": [
            "phploc -vvv --ansi src/*"
        ],
        "start": [
            "php -S localhost:8888 src/index.php"
        ],
        "coverage": [
            "phpunit --coverage-html='./coverage' --bootstrap tests/bootstrap.php tests"
        ],
        "test": [
            "phpunit --bootstrap tests/bootstrap.php tests"
        ],
        "testRequest": [
            "phpunit --bootstrap tests/bootstrap.php --testsuite Request"
        ]
    }
}