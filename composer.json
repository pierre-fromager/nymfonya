{
    "name": "pier-infor/skypass",
    "description": "Nymfonya Backend.",
    "keywords": [
        "backend",
        "rest"
    ],
    "license": "GNU3",
    "type": "project",
    "require": {
        "php": ">=7.0.0",
        "pier-infor/nymfonya-config": "dev-master",
        "pier-infor/nymfonya-container": "dev-master",
        "pier-infor/nymfonya-http-foundation": "dev-master",
        "firebase/php-jwt": "^3.0 || ^4.0 || ^5.0",
        "monolog/monolog": "^1.25",
        "respect/validation": "^1.1",
        "zircote/swagger-php": "^3.0",
        "nilportugues/sql-query-builder": "^1.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5",
        "squizlabs/php_codesniffer": "*",
        "friendsofphp/php-cs-fixer": "^2.13",
        "phploc/phploc": "^4.0",
        "phpmd/phpmd": "@stable"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/App/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "Nymfonya\\Component\\Config\\Tests\\" : "vendor/pier-infor/nymfonya-config/tests/",
            "Nymfonya\\Component\\Container\\Tests\\" : "vendor/pier-infor/nymfonya-container/tests/",
            "Nymfonya\\Component\\HttpFoundation\\Tests\\" : "vendor/pier-infor/nymfonya-http-foundation/tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "disable-tls": false,
        "secure-http": true,
        "process-timeout": 0
    },
    "scripts": {
        "checklint": [
            "phpcs -e --standard=PSR2 --warning-severity=10 --extensions=php src/* tests/*"
        ],
        "lint": [
            "phpcbf --standard=PSR2 --warning-severity=10 --extensions=php src/* tests/*"
        ],
        "cq": [
            "phploc -vvv --ansi src/*"
        ],
        "md": [
            "phpmd ./src text codesize,unusedcode,naming"
        ],
        "start": [
            "php -S localhost:8888 src/index.php"
        ],
        "cov": [
            "phpunit --coverage-html='./coverage'"
        ],
        "covdbg": [
            "phpdbg -qrr ./vendor/bin/phpunit --coverage-html='./coverage'"
        ],
        "test": [
            "phpunit --verbose --testsuite all"
        ]
    }
}
