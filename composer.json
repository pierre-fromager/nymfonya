{
    "name": "PierInfor/skypass",
    "description": "Skypass Backend.",
    "keywords": [
        "airlines",
        "api",
        "backend"
    ],
    "license": "GNU3",
    "type": "project",
    "require": {
        "php": ">=7.0.0",
        "firebase/php-jwt": "^3.0 || ^4.0 || ^5.0",
        "monolog/monolog": "^1.25"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5",
        "squizlabs/php_codesniffer": "*",
        "friendsofphp/php-cs-fixer": "^2.13",
        "phploc/phploc": "^4.0"
    },
    "autoload": {
        "classmap": [],
        "psr-4": {
            "App\\": "src/App/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        },
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "disable-tls": false,
        "secure-http": true
    },
    "scripts": {
        "checklint": [
            "phpcs --standard=PSR2 --warning-severity=0 --extensions=php src/*"
        ],
        "lint": [
            "phpcbf --standard=PSR2 --warning-severity=0 --extensions=php src/* tests/*"
        ],
        "cq": [
            "phploc -vvv --ansi src"
        ]
    }
}